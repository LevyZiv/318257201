#main
  .grid_libre_franklin
    page_headline ADD NEW ITEM
  .grid_garet
    su_desc Thanks for selling your hand me downs! Please fill all the fields
  br
  br
  form#add_item_form(action method='GET')
    .add_item_flex
      .grid_garet_bold
        input#item_name.input_bar(type='text' placeholder='ITEM NAME' required)
        label(for='item_category') Choose a category:
        select#item_category.input_bar(required)
          option(value)
          option(value='men_pants') Men's pants
          option(value='men_shirts') Men's shirts
          option(value='men_shoes') Men's shoes
          option(value='men_accessories') Men's accessories
          option(value='women_pants') Women's pants
          option(value='women_shirts') Women's shirts
          option(value='women_shoes') Women's shoes
          option(value='women_accessories') Women's accessories
        input#item_address.input_bar(type='text' placeholder='Pickup address' required)
        input#item_size.input_bar(type='text' placeholder='SIZE' required)
        input#item_brand.input_bar(type='text' placeholder='BRAND' required)
        input#item_year.input_bar(type='number' placeholder='YEAR OF MANUFACTURE' min='1900' max='2023' required)
        input#item_price.input_bar(type='number' placeholder='PRICE' min='0' required)
      label(for='profile_input')
        img(src='../static/photos/insert_item_picture.png')
      input#profile_input.picture_input(type='file' accept='image/*' required)
    .grid_garet_bold
      input#finish_signup.button(type='submit' value='FINISH')