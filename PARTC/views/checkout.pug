  form#checkout_form(action method='GET')
    .grid_garet_bold.checkout_flex
      input#address_conf.input_bar(type='text' placeholder='SHIPPING ADDRESS' required)
      input#phone_number.input_bar(type='text' placeholder='PHONE NUMBER' pattern='[0][0-9]{9}' title='Please insert phone number with 0 at beginning and digits only' required)
      credit_card_label
        | Credit card details
        br
        | (number, exp. date, security code):
      input#credit_card_num.input_bar(type='text' placeholder='1234-1234-1234-1234' pattern='[0-9]{4}-[0-9]{4}-[0-9]{4}-[0-9]{4}' title='Please insert credit card number as shows on the card (with hyphens)' required)
      input#credit_card_date.input_bar.month_input_bar(type='month' value='2023-01' min='2023-01' required)
      input#credit_card_sec.input_bar(type='number' placeholder='123' pattern='[0-9]{3}' required)
      credit_card_label Total: 60 NIS
      input#finish_checkout.button.finish_checkout(type='submit' value='CONFIRM AND PAY')